@page
@model PotionHouse.Areas.Admin.Pages.Roles.New

@{
    ViewData["Title"] = "Create new Role";
}

<section style="max-width: 300px" class="w-100 m-auto">
    <h3>Create new Role</h3>
    @if (Model.Message is not null)
    {
        <div class="alert alert-primary" role="alert">
            @Model.Message
        </div>
    }
    <form method="post" >
        <div class="mb-3">
            <label asp-for="RoleName" class="form-label"></label>
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="font-monospace text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-outline-primary">Create</button>
        </div>
    </form>
</section>