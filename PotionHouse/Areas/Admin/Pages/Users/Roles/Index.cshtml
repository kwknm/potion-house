@page
@model PotionHouse.Areas.Admin.Pages.Users.Roles.Index

@{
    ViewData["Title"] = "User Roles";
}

<section style="max-width: 300px" class="w-100 m-auto">
    <h3>User Roles</h3>
    @if (Model.ErrorMessage is not null)
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }
    <form method="post">
        <div class="mb-3">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="form-control">
        </div>
        <div>
            <button type="submit" class="btn btn-outline-primary">Search for Roles</button>
        </div>
    </form>
    @if (Model.UserRoles is not null)
    {
        <ul class="list-group mt-4">
            <li class="list-group-item active">Roles:</li>
            @foreach (var role in Model.UserRoles)
            {
                <li class="list-group-item">@role</li>
            }
            @if (Model.UserRoles?.Count == 0)
            {
                <li class="list-group-item disabled">User has no Roles</li>
            }
        </ul>
    }
</section>