@page
@model PotionHouse.Areas.Account.Pages.Register

@{
    ViewData["Title"] = "Register new Account";
}

<section style="max-width: 300px" class="w-100 m-auto">
    <h3>Register new Account in Potion House</h3>
    <form method="post">
        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="font-monospace text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="font-monospace text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="font-monospace text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="font-monospace text-danger"></span>
        </div>
        <span class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-outline-primary">Register</button>
            <a asp-area="account" asp-page="login" class="btn-link">Do not have an account?</a>
        </span>
    </form>
</section>