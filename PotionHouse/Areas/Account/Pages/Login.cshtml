@page
@model PotionHouse.Areas.Account.Pages.LoginModel
@{
    ViewData["Title"] = "Sign in";
}

<section style="max-width: 300px" class="w-100 m-auto">
    <h3>Sign in with existing account</h3>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="font-monospace text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="font-monospace text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="checkbox" asp-for="RememberMe" class="form-check-input">
            <label asp-for="RememberMe" class="form-label"></label>
        </div>
        <span class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-outline-primary">Sign in</button>
            <a asp-area="account" asp-page="register" class="btn-link">Already have an account?</a>
        </span>
    </form>
</section>